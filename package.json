{
  "name": "ls-tool",
  "version": "1.0.0",
  "description": "A cross-platform UNIX-like ls command implementation built with Bun",
  "main": "ls.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:win",
    "build:win": "bun build --compile --target=bun-windows-x64 --outfile=ls.exe ls.js",
    "build:mac": "bun build --compile --target=bun-darwin-x64 --outfile=ls ls.js",
    "build:linux": "bun build --compile --target=bun-linux-x64 --outfile=ls ls.js",
    "build:all": "npm run build:win && npm run build:mac && npm run build:linux",
    "test": "bun run ls.js --help",
    "clean": "rm -f ls.exe ls"
  },
  "keywords": [
    "ls",
    "unix",
    "directory",
    "listing",
    "command-line",
    "cli",
    "bun"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "bin": {
    "ls-tool": "./ls.js"
  },
  "files": [
    "ls.js",
    "README.md"
  ]
}